<h1>Productos en Tiempo Real</h1>

<section>
  <h2>Agregar producto (envía por WebSocket)</h2>
  <form id="productForm">
    <input name="title" placeholder="title" required />
    <input name="description" placeholder="description" required />
    <input name="code" placeholder="code" required />
    <input name="price" type="number" step="0.01" placeholder="price" required />
    <input name="status" placeholder="status" value="true" />
    <input name="stock" type="number" placeholder="stock" value="0" />
    <input name="category" placeholder="category" />
    <input name="thumbnails" placeholder="thumbnails (comma separated)" />
    <button type="submit">Agregar</button>
  </form>
</section>

<section>
  <h2>Lista</h2>
  <ul id="productsList">
    {{#each products}}
      <li data-id="{{this.id}}">
        <strong>{{this.title}}</strong> — Precio: {{this.price}} — ID: {{this.id}}
        <button class="deleteBtn" data-id="{{this.id}}">Eliminar</button>
      </li>
    {{/each}}
  </ul>
</section>
